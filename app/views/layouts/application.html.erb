<!DOCTYPE html>
<html>
<head>
  <title>ForumApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="http://cdnjs.cloudflare.con/ajax/libs/normalize/3.0.1/normalize.min.css" ref="stylesheet"></link>
  <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" ref="stylesheet"></link>
  <%= csrf_meta_tags %>



</head>
<body>
	<header class="navbar navbar-fixed-top navbar-default">
		<div class="wrapper clearfix">
			<div id="logo">
  				<%= link_to "Tree Hole", root_path %>
			</div>

			<nav>
				<ul class="nav navbar-nav navbar-right">
          
               <% if user_signed_in? %>
             
            <%= link_to current_user.name,current_user, class: "button" %>
  		     <%= link_to "New Post", new_post_path, class: "button" %>
            <% else %>
             <%= link_to "Sign In", new_user_session_path, class: "button" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "button" %>

            <% end %>
          </ul>

			</nav>

		</div>
	</header>
	<p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
