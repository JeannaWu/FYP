<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
    
      <h1><%= @club.name %></h1>
      <span><%= link_to "view the club", @club %></span>
      <span><b>Posts:</b> <%= @club.posts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @posts.any? %>
        <div class="user_avatars">
          <% @posts.each do |user| %>
            <p>nothing</p>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @clubs.any? %>
      <ul class="users follow">
        <%= render @clubs %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>