
<h1><%= @post.title%></h1>
<p><%= @post.user.name%></p>
<%= time_tag @post.created_at %> 
<div id = "clearfix">


	<div id = "post_image">
		<%= image_tag @post.image.url(:medium)%>
		<div id = "content">
			<%= @post.content%>
		</div>
	</div>
	<%= link_to "Like", like_post_path(@post), method: :get, class: "data" %>
	<i class="fa fa-thumbs-o-up"> </i>
	<%= @post.get_upvotes.size%>
	<%= link_to "Dislike",dislike_post_path(@post), method: :get, class: "data"%><i class="fa fa-thumbs-o-down"><%= @post.get_downvotes.size%></i>
	<i class="fa fa-comments-o"></i><%= pluralize(@post.comments.count,"Comment")%>


<% if @post.user == current_user %>


<%= link_to "Home", root_path%>
<%= link_to "Edit", edit_post_path(@post)%>
<%= link_to "Destroy", post_path(@post), method: :delete, data: {confirm: "Are you sure to delete the post?"}%>
<%- end %>
</div>
<div id = "random-post">
	<h3> Random Posts</h3>
	<div id = "post">
		<div id = "post_image">
			<%=link_to (image_tag @random_post.image.url(:small)), post_path(@random_post)%>
			

		</div>
		<div id = "post_content">
			<div id = "title">
				<h2><%= link_to @random_post.title, post_path(@random_post)%><h2>
			</div>
			<div id="data.clearfix">
				<p>Posted by <%= @random_post.user.name%></p>
				<<p><%= @random_post.comments.count%> Comments  <br><%= @random_post.get_likes.size%>Likes</p>
				<div>
		</div>
	</div>
</div>
<p>Reply to the post</p>

 <% @comments.each do |comment| %>
     <%= comment.user.name%><br>
     <%= comment.content%><br>
 <% end -%>
 <%= form_for [@post,@post.comments.build] do |f| %>  
  <p><%= f.text_area :content,:size => '68x10' %> </p>  
  <p><%= f.submit "Post Comment" %> </p>  
<% end %>  






